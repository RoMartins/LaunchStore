{% extends 'layout.njk' %}

{% block content %}

    <section class="login container form">
        <form action="/users/forgot-password" method="POST">

            <div class="header">
                <h3>Esqueceu a senha ?</h3>
            </div>

            <div class="fieldsLogin">
                <div class="item">
                    <div>Email</div>
                    <div class="input">
                        <input type="text" 
                        name="email" 
                        placeholder="Digite o email cadastrado" 
                        value="{{user.email}}"
                        >
                    </div>
                </div>
            </div>

            <button class="button login" type="submit">Recuperar senha</button>

        </form>

    </section>

{% endblock content %}