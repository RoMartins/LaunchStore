{% extends 'layout.njk' %}

{% block content %}

    <section class="login container form">
        <form action="/users/password-reset" method="POST">

            <div class="header">
                <h3>Redefina sua senha</h3>
            </div>

            <div class="fieldsLogin">

             <div class="item">
                    <div>Email</div>
                    <div class="input">
                        <input type="text" 
                        name="email" 
                        placeholder="Digite o email cadastrado" 
                        value="{{user.email}}"
                        >
                    </div>
                </div>

                <div class="item">
                    <div>Senha</div>
                    <div class="input">
                            <input type="password" name="password" placeholder="Nova senha">

                        </div>

                    </div>

                        <div class="item">
                            <div>Repetir Senha</div>
                            <div class="input">
                                <input type="password" name="passwordRepeat" placeholder="Repita a senha escolhida">
                            </div>
                        </div>

                    </div>

                    <button class="button login" type="submit">Confirmar</button>

    <input type="hidden" name="token" value="{{token}}">
                </form>
            </section>

        {% endblock content %}