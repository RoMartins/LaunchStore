 {% extends 'layout.njk' %}

{% block content %}
<section class="search container">

    <aside>
    <div class="header">
        <h2>{{search.term}}</h2>
        <p> {{search.total}} encontrados </p>    
    </div>
    
    <nav class="categories">
    <h4>Categorias</h4>
        <ul>
         {% for category in categories %}

            <li><a href="/products/search?filter={{search.term}}&category={{category.CategoryId}}">{{category.name}}</a></li>

         {% endfor %}    
        </ul>
    </nav>

    </aside>

        <div class="items">
        
        {% for product in products  %}
        <div class="product">

            <div 
                class="image"
                
                style = "background-image: url({{product.img}})"
            >
            </div>
            {% if product.oldPrice != product.price %}
                <div class="old-price">{{product.oldPrice}}</div>
            {% endif %} 

            <p>{{product.price}}</p>
            <h4>{{product.name}}</h4>

            <a href="/products/{{product.id}}" class="button">Ver produto</a>
            </div>        
        {% endfor %}
                
        </div>

</section>

{% endblock content %}
